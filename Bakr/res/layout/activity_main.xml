<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="5dip"
        android:src="@drawable/bakr_girl_small" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/imageView1"
        android:paddingLeft="20dip"
        android:paddingTop="10dip"
        android:src="@drawable/title" />

    <ImageButton
        android:id="@+id/cupcakeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/baguetteButton"
        android:layout_marginLeft="28dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:onClick="doStuff"
        android:scaleType="fitXY"
        android:src="@drawable/cupcake_button" />

    <ImageButton
        android:id="@+id/baguetteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="88dp"
        android:layout_toRightOf="@+id/cupcakeButton"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:onClick="doStuff"
        android:scaleType="fitXY"
        android:src="@drawable/baguette_button" />

    <ImageButton
        android:id="@+id/appleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/baguetteButton"
        android:layout_marginRight="24dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:onClick="doStuff"
        android:scaleType="fitXY"
        android:src="@drawable/apple_button" />

    <ImageView
        android:id="@+id/cheesecakeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/appleButton"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/appleButton"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:onClick="doStuff"
        android:scaleType="fitXY"
        android:src="@drawable/cheesecake_button" />

</RelativeLayout>